# Production Environment Variables for PulseCRM
# Copy this file to .env.production and fill in your values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app
APP_URL=https://your-app-name.vercel.app

# Authentication (Required)
NEXTAUTH_URL=https://your-app-name.vercel.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Database Configuration
# Option A: Vercel Postgres (Recommended)
# These are auto-populated when you connect Vercel Postgres in the dashboard
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# Option B: External PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/database

# File Storage
# Option A: Vercel Blob Storage (Recommended for Vercel deployments)
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Option B: AWS S3 (For external storage)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=your-bucket-name

# Email Service (Required for password reset and notifications)
# Option A: SendGrid (Recommended)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@your-domain.com

# Option B: Gmail (For development/small scale)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-specific-password
# EMAIL_FROM="PulseCRM <noreply@your-domain.com>"

# Option C: Resend
# EMAIL_SERVICE=resend
# RESEND_API_KEY=re_your-resend-api-key
# EMAIL_FROM=noreply@your-domain.com

# Option D: SMTP
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# SMTP_FROM="PulseCRM <noreply@your-domain.com>"

# Security
RATE_LIMIT_ENABLED=true
ALLOWED_ORIGINS=https://your-app-name.vercel.app
CSP_REPORT_URI=https://your-app-name.vercel.app/api/csp-report

# Analytics (Optional)
# VERCEL_ANALYTICS_ID=
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=

# Real-time Features (Optional)
# For WebSocket support with Pusher
# PUSHER_APP_ID=
# NEXT_PUBLIC_PUSHER_KEY=
# PUSHER_SECRET=
# PUSHER_CLUSTER=us2

# Feature Flags
ENABLE_REAL_TIME=false
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE_MB=10

# API Keys (Optional)
# OPENAI_API_KEY=
# PERPLEXITY_API_KEY=

# OAuth Providers (Optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Monitoring (Optional)
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
# SENTRY_ORG=
# SENTRY_PROJECT=

# Document Signing (Optional)
# DEFAULT_EMAIL=admin@your-domain.com
# RECIPIENT_EMAILS=email1@example.com,email2@example.com

# Deployment
# These are usually set automatically by Vercel
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=
# VERCEL_REGION=

# Build Cache
TURBO_REMOTE_ONLY=false
TURBO_RUN_SUMMARY=false